@{
    ViewBag.Title = "Authenticate";
}

<section class="container">
    <div class="row">
        <div id="login-box" class="col-lg-6 col-sm-12">
            <h3>Login</h3>
            @using( Html.BeginForm( "Login", "Account", FormMethod.Post ) )
            {
                <div class="form-group">
                    <input type="text" value="" placeholder="Username or Email" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="password" value="" placeholder="Password" class="form-control" />
                </div>

                <input type="submit" value="Login" class="btn btn-primary" />
            }
        </div>
        <div id="registration-box" class="col-lg-6 col-sm-12">
            <h3>Register</h3>
            @using( Html.BeginForm( "Register", "Account", FormMethod.Post ) )
            {
                <div class="form-group">
                    <input type="text" value="" placeholder="Username" class="form-control" name="Username" />
                </div>
                <div class="form-group">
                    <input type="text" value="" placeholder="Email" class="form-control" name="Email" />
                </div>
                <div class="form-group">
                    <input type="password" value="" placeholder="Password" class="form-control" name="Password" />
                </div>
                <input type="submit" value="Register" class="btn btn-primary" />
                <br /><br/>
                <p>By registering, you are accepting to the terms and conditions of our community.</p>
            }
        </div>
    </div>
</section>

